@model HomeIndexViewModel;

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Holidays Tracker</h1>
    <br />
    <table class="table table-dark">
        <tr>
            <th>Requester</th>
            <th>StartDate</th>
            <th>EndDate</th>
            <th>Type</th>
            <th>TotalDays</th>
            <th>Remainingdays</th>
        </tr>
        @{ 
            foreach (var i in Model.holidayRequests)
            {
                <tr>
                    <td>@i.RequesterName</td>
                    <td>@i.StartDate.ToShortDateString()</td>
                    <td>@i.EndDate.ToShortDateString()</td>
                    <td>@i.HolidayType</td>
                    <td>@i.TotalHolidays</td>
                    <td>@i.RemainingHolidays</td>
                </tr>
            }
        }
    </table>
</div>
